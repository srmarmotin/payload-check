<button id="cleanTable">Clean Table</button>
<table>
    <thead>
        <tr>
            <th>Remove</th>
            <th>Key</th>
            <th>Assertion</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        {{#rows}}
        <tr class="table-results" data-row="{{key}}">
            <td>X</td>
            <td>{{key}}</td>
            <td>
                <select class="assertion-select" data-key="{{key}}">
                    <option value="notEmpty" selected>Not Empty</option>
                    <option value="equalsTo">Equals to</option>
                    <option value="shouldntExist">Shouldn't Exists</option>
                </select>
            </td>
            <td>{{values.value}}</td>
        </tr>
        {{/rows}}
    </tbody>
</table>

<!-- Single error popup for all rows -->
<div id="error-popup" class="error-popup">
    <div class="error-popup-content">
        <strong>Assertion Failed</strong><br>
        Expected: <span class="expected-value"></span><br>
        Received: <span class="received-value"></span>
    </div>
</div>